<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t(:test_systems), root_path, id: "logo" %>



      <nav>
        <ul class="nav pull-right">
          <li><%= link_to t(:home), root_path %></li>
          <% if signed_in? %>

               

           

              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.nik %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                          
                  <li><%= link_to t(:users), users_path %></li>
                  <li><%= link_to t(:profile), current_user %></li>
                  <li><%= link_to t(:settings), edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t(:sign_out), signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
              <% else %>
              <li><a href="#myModal"  data-toggle="modal"><%= t(:sign_in) %></a></li>
            <% end %>
          <li><%= link_to image_tag('ua.png'),  request.fullpath.split("?")[0].insert(-1,"?locale=ua")  %></li>
          <li><%= link_to image_tag('gb.png'),  request.fullpath.split("?")[0].insert(-1,"?locale=en")  %></li>

          </ul>

      </nav>
    </div>
  </div>
</header>

<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
   <h1>Sign in</h1>
    </div>
  <div class="modal-body">
     
        <%= form_for(:session, url: sessions_path) do |f| %>

            <%= f.label :email %>
            <%= f.text_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>
      

  </div>
  <div class="modal-footer">
    <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
  </div>
  <% end %>
</div>



