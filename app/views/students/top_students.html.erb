<ul class="student">
  <% i=0 %>
  <div class="select_drop">
  <%= select "post", "count", 5..20, options = {}, {:onchange =>  "$('top_s').location.reload()"} %>
  </div>
  <div id="top_s">
  <table class="table table-bordered table-striped table-hover table-condensed" border="2px">
    <tr>
      <th><%= t(:N_pp) %></th>
      <th><%= t(:student) %></th>
      <th><%= t(:round_ball) %></th>
    </tr>
    <% @top_student.each do |tstud| %>

        <tr>
          <td><%= (i+=1).to_s %></td>
          <td><%= link_to tstud.name, tstud %></td>
          <td><%= tstud.round_ball %></td>
        </tr>



    <% end %>
  </table>
  </div>
</ul>
