<h1><%= t(:top_students) %></h1>
  <div id="table_in">
  <table id="top_student" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" >
    <thead>
    <tr>
      <th><%= t(:class_st) %></th>
      <th><%= t(:student) %></th>
      <th><%= t(:round_ball) %></th>
    </tr>
    </thead>
    <tbody>
    <% @top_student.each do |tstud| %>

        <tr>
          <td><%= tstud.class_st %></td>
          <td><%= link_to tstud.first_name + ' '+ tstud.name, tstud %></td>
          <td><%= tstud.round_ball.to_f.round(2) %></td>
        </tr>



    <% end %>
    </tbody>
  </table>
  </div>
