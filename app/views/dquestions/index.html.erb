<h1>Listing dquestions</h1>

<%= link_to 'Tests', dtests_path %>
<table class = "table table-striped">
  <tr>
    <th>Question text</th>
    <th>Count answer</th>
    <th>Dtest</th>
    <th></th>
    
  </tr>

<% @dquestions.each do |dquestion| %>
  <tr>
    <td><%== dquestion.question_text %></td>
    <td><%= dquestion.count_answer %></td>
    <td><%= dquestion.dtest_id %></td>
    <td><%= link_to 'Show', [@dtest, dquestion] %>
    <%= link_to 'Edit', [:edit, @dtest, dquestion] %>
    <%= link_to 'Destroy', [@dtest, dquestion], method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Dquestion', new_dtest_dquestion_path %>
