<% provide(:title,t(:edit)) %>
<h1><%= t(:update) %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
      <%=  render 'fields', f: f %>
      <%= f.submit t(:save), class: "btn btn-large btn-primary" %>
    <% end %>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails"> <%= t(:change)  %></a> <br />
    <% if current_user.student  %>
            <%= link_to t(:edit_student), edit_student_path(current_user.student), class: "btn btn-large btn-primary" %>
    <% else %>
            <%= link_to t(:add_student), new_student_path, class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
