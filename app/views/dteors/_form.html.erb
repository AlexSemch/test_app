<%= simple_form_for(@dteor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: t(:name) %>
    <%= f.cktext_area :teor_text %>
    <%= f.association :dthem, label_method: :them_text, value_method: :id, label: t(:tem) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
