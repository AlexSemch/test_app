<h1><%= t(:list_teorii) %></h1>
<div class="select_drop">
    <%= select_tag :dthem, options_from_collection_for_select( @thems, :id, :them_text), id: :select_dthemm, :prompt => "All"  %>
</div>
<table>
  <tr>
    <th><%= t(:name) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dteors.each do |dteor| %>
  <tr class="dteor dteor<%= dteor.dthem_id %>">
    <td><%= dteor.name %></td>
    <td>
      <% if permitted_to? :show, :dteors %>
        <%= link_to t(:show), dteor %>
      <% end %>
    </td>
    <td>
      <% if permitted_to? :edit, :dteors %>
        <%= link_to t(:edit), edit_dteor_path(dteor) %>
      <% end %>
    </td>
    <td>
      <% if permitted_to? :destroy, :dteors %>
        <%= link_to t(:delete), dteor, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
<% if permitted_to? :new, :dteors %>
  <%= link_to t(:add_teor), new_dteor_path %>
<% end %>
