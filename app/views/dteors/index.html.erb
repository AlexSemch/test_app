<h1>Listing dteors</h1>

<%= select_tag :dthem, options_from_collection_for_select( @thems, :id, :them_text), id: :select_dthemm, :prompt => "All"  %>
<table>
  <tr>
    <th>Name</th>
    <th>Dthem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dteors.each do |dteor| %>
  <tr class="dteor dteor<%= dteor.dthem_id %>">
    <td><%= dteor.name %></td>
    <td><%= dteor.dthem_id %></td>
    <td>
      <% if permitted_to? :show, :dteors %>
        <%= link_to 'Show', dteor %>
      <% end %>
    </td>
    <td>
      <% if permitted_to? :edit, :dteors %>
        <%= link_to 'Edit', edit_dteor_path(dteor) %>
      <% end %>
    </td>
    <td>
      <% if permitted_to? :destroy, :dteors %>
        <%= link_to 'Destroy', dteor, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
<% if permitted_to? :new, :dteors %>
  <%= link_to 'New Dteor', new_dteor_path %>
<% end %>
